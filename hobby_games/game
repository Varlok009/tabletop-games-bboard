<script type="text/javascript">
    $(function() {
        var horizontal_menu = $('.horizontal-menu'),
            block_menu = horizontal_menu.find('.inner'),
            menu = block_menu.find('ul'),
            increaseMenuSize = function() {
                var el = menu.find('.sub_inner li:not(.hidden):first'),
                    id = el.data('id');
                if (id) {
                    menu.find('li[data-id=' + id + ']').toggleClass('hidden');
                } else {
                    menu.find('li.show-all').addClass('hidden');
                }
                old_width = $(window).width();
                checkMenuSize();
            },
            decreaseMenuSize = function() {
                var el = menu.find('.sub_inner li.hidden:last'),
                    id = el.data('id');
                if (!id) return;

                menu.find('li.show-all').removeClass('hidden');
                menu.find('li[data-id=' + id + ']').toggleClass('hidden');
                old_width = $(window).width();
                checkMenuSize();
            },
            old_width = 0,
            checkMenuSize = function() {
                if (horizontal_menu.is(':visible')) {
                    var block_menu_width = block_menu.innerWidth();

                    if (menu.innerWidth() > block_menu_width) {
                        decreaseMenuSize();
                    } else {
                        if (block_menu_width <= $(window).width() && old_width < $(window).width()) {
                            increaseMenuSize();
                        }
                    }
                    block_menu.css('visibility', 'visible');
                    old_width = $(window).width();
                }
            },
            loadDropMenu = function () {
                $.ajax({
                    url: '/?route=common/blocks/index&blocks[]=horizontal',
                    dataType: 'json',
                    success: function (json) {
                        if ('horizontal' in json && json['horizontal']) {
                            horizontal_menu.find('.dropdown').html(json['horizontal']);

                            $(".dropdown__left").on('mouseover', '.dropdown-item__link', function(e){
                                $(".dropdown__left").find('.dropdown-item__link').toggleClass('active-link', false);
                                $(this).toggleClass('active-link', true);
                            });
                        }
                    }
                });
            };

        loadDropMenu();
        checkMenuSize();

        $(window).on("resize", function() {
            checkMenuSize();
        });
    });
</script>    </div>
