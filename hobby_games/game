                <script>
    function fastBuyDialogOpenTrigger(with_product, from_category) {
        if (with_product) {
            window.dataLayer = window.dataLayer || [];
            dataLayer.push({
                'event': 'gtm-ga-event',
                'gtm-ga-event-category': '1-Click-Order',
                'gtm-ga-event-action': 'Open',
                'gtm-ga-event-label': from_category ? 'Product-category' : 'Detail',
                'gtm-ga-event-non-interaction': 'False'
            });
        } else {
            window.dataLayer = window.dataLayer || [];
            dataLayer.push({
                'event': 'gtm-ga-event',
                'gtm-ga-event-category': 'Back-call',
                'gtm-ga-event-action': 'Open',
                'gtm-ga-event-non-interaction': 'False'
            });
        }
    }
</script>
