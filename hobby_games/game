        'gtm-ee-event-action': 'Product Details',
        'gtm-ee-event-non-interaction': 'True'
    });

    $('.product-item-mini').on('click', '.image a, a.name', function (e) {
        var item = $(this).parents('.product-item-mini');

        dataLayer.push({
            'ecommerce': {
                'currencyCode': 'RUB',
                'click': {
                    'actionField':
                        {
                            'list': 'Kross-sale-category'
